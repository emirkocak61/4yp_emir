<root BTCPP_format="4">
    <BehaviorTree ID="MainTree">
        <Sequence>

            <Script code="device_type:='needle_valve'" />
            <Script code="device_id:='0'" />

            <Script code="source_frame:=device_type + '/' + device_id + '/handle'" />

            <!-- Note - Link Offset Translation is used to Align Realsense with Device Centre for Handle Angle Estimation -->
            <!-- <GetTFTransformAsPose source_frame="{source_frame}" target_frame="odom" pose="{handle_pose}" link_offset_translation="0 -0.06 0" link_offset_rotation="0 0 0 1"/> -->
            <!-- <GetTFTransformAsPose source_frame="{source_frame}" target_frame="odom" pose="{handle_pose}" link_offset_translation="0.033 -0.01 0" link_offset_rotation="0 0 0 1"/> -->
            <!-- <GetTFTransformAsPose source_frame="{source_frame}" target_frame="odom" pose="{handle_pose}" link_offset_translation="0.033 0 0" link_offset_rotation="0 0 0 1"/> -->
            <GetTFTransformAsPose source_frame="{source_frame}" target_frame="odom" pose="{handle_pose}" link_offset_translation="0 0 0" link_offset_rotation="0 0 0 1"/>

            <OffsetPose input_pose="{handle_pose}" link_offset_translation="0.036 -0.05 0" link_offset_rotation="0 0 0 1" output_pose="{handle_pose_camera_aligned}"/>

            <!-- Approach -->

            <!-- Tick approachTarget Action-->
            <SaySomething message="Moving to Pre-Grasp Pose..." />
            <approachTargetNode target="{handle_pose_camera_aligned}"/>

        </Sequence>
    </BehaviorTree>
</root>
